@using MudBlazor

<MudStack Row Spacing="1" Class="align-center">

    @if (HeadingLevel is >= 1 and <= 6)
    {
        @switch (HeadingLevel)
        {
            case 1:
                <MudText Typo="Typo.h4" GutterBottom="true">@Title</MudText>
                break;
            case 2:
                <MudText Typo="Typo.h5" GutterBottom="true">@Title</MudText>
                break;
            case 3:
                <MudText Typo="Typo.h6" GutterBottom="true">@Title</MudText>
                break;
        }
    }
    else
    {
        <MudText Typo="Typo.h5" GutterBottom="true">@Title</MudText>
    }
</MudStack>

@code {
    [Parameter]
    public string Icon { get; set; } = Icons.Custom.Uncategorized.ChessQueen;

    [Parameter]
    public Color IconColor { get; set; } = Color.Secondary;

    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public int HeadingLevel { get; set; } = 2; // h2 がデフォルト

    [Parameter]
    public string? TextClass { get; set; } = "fw-bold";

}
