<DialogBaseWrapper DialogAlertType="DialogAlertType.Info"
                   DialogTitle="ジャンル登録"
                   ExecuteButtonText="@AppConstants.LABEL_BUTTON_REGISTER"
                   CancelButtonText="@AppConstants.LABEL_BUTTON_CANCEL"
                   ContentClass="py-5"
                   OnExecuteAsync="SubmitAsync">

    <GenreEditor @ref="formRef" IsDialog="true" Id="GenreId" />
</DialogBaseWrapper>

@code {
    private GenreEditor? formRef;
    [Parameter] public Guid? GenreId { get; set; }

    private async ValueTask<bool> SubmitAsync()
        => formRef is not null && await formRef.SubmitAsync();
}
