@implements IDisposable

@inject NavigationManager NavigationManager
<AuthorizeView>
    <Authorized>
        <MudMenu　AnchorOrigin ="Origin.BottomRight" TransformOrigin="Origin.TopRight">
            <ActivatorContent>
                <MudChip T="string" Icon="@Icons.Material.TwoTone.Person" Color="Color.Secondary">@context.User.Identity?.Name</MudChip>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Href="Account/Manage"
                             ForceLoad
                             Icon="@Icons.Material.TwoTone.Settings"
                             IconColor="Color.Secondary"
                             Label="アカウント設定" />
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@_currentUrl" />
                    <button type="submit" class="mud-nav-link mud-ripple">
                        <MudIcon Icon="@Icons.Material.TwoTone.Logout" Color="Color.Secondary" Class="mr-3"></MudIcon> ログアウト
                    </button>
                </form>
            </ChildContent>
        </MudMenu>
    </Authorized>
    <NotAuthorized>
        <MudMenu>
            <ActivatorContent>
                <MudChip T="string" Icon="@Icons.Material.TwoTone.Person" Color="Color.Secondary">???</MudChip>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Href="Account/Register"
                             ForceLoad
                             Icon="@Icons.Material.TwoTone.Person"
                             IconColor="Color.Secondary"
                             Label="ユーザー登録" />
                <MudMenuItem Href="Account/Register"
                             ForceLoad
                             Icon="@Icons.Material.TwoTone.Password"
                             IconColor="Color.Secondary"
                             Label="ログイン" />
            </ChildContent>
        </MudMenu>
    </NotAuthorized>
</AuthorizeView>

@code {
    private string? _currentUrl;

    protected override void OnInitialized()
    {
        _currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        _currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

