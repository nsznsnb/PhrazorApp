        --mono-font-stack: ui-monospace,"Cascadia Mono",Consolas,"SFMono-Regular","Source Code Pro","Noto Sans Mono","Liberation Mono",monospace;
        --mono-size: 1rem;
        --mono-line: 1.5rem;
        --qcard-h: 180px;
    }

    .qcard {
        height: var(--qcard-h);
    }

    .q-stack {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .q-body {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow-y: auto;
        text-align: center;
        overflow-wrap: anywhere;
        word-break: normal;
    }

    /* TextArea の見た目を一致させる */
