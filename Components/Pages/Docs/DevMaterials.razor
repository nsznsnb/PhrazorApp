@page "/docs/dev"
@attribute [Authorize]

<PageTitle>開発資料</PageTitle>

<MudStack Spacing="2">
    <SectionTitle Title="開発資料（ER 図 / a5er）" />

    <ActionCard>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary"
                   StartIcon="@Icons.Material.TwoTone.Image"
                   Href="@PngPath" Target="_blank">
            ER 図（PNG）を開く
        </MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary"
                   StartIcon="@Icons.Material.TwoTone.Download"
                   Href="@A5erPath" Target="_blank" Download>
            ER 図（.a5er）をダウンロード
        </MudButton>
    </ActionCard>

    <MudCard Elevation="AppConstants.DEFAULT_ELEVATION">
        <MudCardContent Class="py-2">
            <MudText Typo="Typo.subtitle1">ER 図プレビュー（拡大・スクロール可）</MudText>
        </MudCardContent>
        <MudCardContent>
            <ZoomableImage Src="@PngPath" Alt="Phrazor ER Diagram" Height="100vh" />
        </MudCardContent>
    </MudCard>

</MudStack>

@code {
    private const string PngPath = "/docs/er/Phrazor_ER.png";
    private const string A5erPath = "/docs/er/Phrazor_ER.a5er";
}
